@model PagedList.IPagedList<Webdaugia.Models.RegisterBid>
@using PagedList.Mvc
@{
    ViewBag.Title = "listregitsteroflot";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{ var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN"); }
<div class="row">
    <div class="col-12">
        <!-- ORDERS TABLE -->
        <div class="box">
            <div class="box-header title row">
                <div class="col-6 col-sm-12">
                    <h2 style="margin-bottom:40px">Danh tài khoản đăng ký phiên đấu giá</h2>   
                </div>


                <div class="col-6 col-sm-12">
                    <div class="row">
                        <h3 class="col-6 col-sm-12" style="display:flex; align-items:center">Tiền đặt cọc + phí: <span class="text-success" style="display:contents">@string.Format(info, "{0:0,0}", @ViewBag.tiencoc) đ</span>  </h3>
                        <div class="col-6 col-sm-12" >
                            <a href="/admin/adlot/SendMailRegister?LotID=@ViewBag.LotId&Url=@Request.Url.ToString()" class="btn btn-success" style="display:grid">
                                <i class='bx bx-mail-send'></i>
                                Gửi mail
                            </a>
                        </div>


                    </div>

                </div>

            </div>
            <div class="row">
                <div class="col-4 col-sm-12" style="margin-bottom:0">
                    @using (Html.BeginForm("ListRegitsterOfLot", "AdLot", FormMethod.Get, new { @class = "navbar-search" }))
                    {
                        <input type="text"
                               name="searchString"
                               class="navbar-search-input"
                               placeholder="Tìm kiếm sản phẩm..."
                               value="@ViewBag.searchString" />
                        <button type="submit"><i class="fas fa-search"></i></button>}
                </div>
            </div>
            <div style="overflow:scroll">
                <table>
                    <thead>
                        <tr>
                            <th width="40px">
                                STT
                            </th>

                            <th align="center">ID Phiên</th>
                            <th align="center">Tên Phiên</th>
                            <th align="center">ID Tài khoản</th>
                            <th align="center">Tên Tài khoản</th>
                            <th align="center">Số điện thoại</th>
                            <th align="center">Trạng thái</th>

                            <th align="center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="8" style="
                            text-align: center;
                            font-size: 2rem;">
                                    Hiện chưa có danh sách tài khoản đắng ký tham gia đấu giá
                                </td>
                            </tr>
                        }
                        @{ int count = 1;}

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                @{ count++;}
                                <td width="250px" align="center">@item.LotID</td>
                                <td width="250px" align="center">@item.Lot.Name</td>
                                <td width="250px" align="center">@item.User.ID</td>
                                <td width="250px" align="center">@item.User.FullName</td>
                                <td width="250px" align="center">@item.User.Phone</td>
                                @if (item.Status != 0)
                                {


                                    <td align="center">
                                        <div class="payment-status payment-paid">
                                            <div class="dot"></div>
                                            <span>Đã nộp tiền</span>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td align="center">
                                        <div class="payment-status payment-pending">
                                            <div class="dot"></div>
                                            <span>Chưa nộp tiền</span>
                                        </div>
                                    </td>
                                }
                                <td align="center">
                                    @if (item.Status != 0)
                                    {
                                        <div style="height:100%; display:flex; align-items:center; justify-content:center">
                                            <a class="btn" href="/admin/adlot/ConfirmRegitsterOfLot?LotId=@item.LotID&UserId=@item.UserID&Url=@Request.Url.ToString()" onclick="return confirm('Bạn xác nhận tài khoản @item.UserID - @item.User.FullName này chưa nộp tiền')">
                                                <i class="fas fa-check" style="color: #04D182"></i>
                                            </a>

                                        </div>
                                    }
                                    else
                                    {
                                        <div style="height:100%; display:flex; align-items:center; justify-content:center">
                                            <a class="btn" href="/admin/adlot/ConfirmRegitsterOfLot?LotId=@item.LotID&UserId=@item.UserID&Url=@Request.Url.ToString()" onclick="return confirm('Bạn xác nhận tài khoản @item.UserID - @item.User.FullName này đã nộp tiền')">
                                                <i class="fas fa-times" style="color: red"></i>
                                            </a>

                                        </div>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @Html.PagedListPager(Model, page => Url.Action("listregitsteroflot", new { page, @searchString = ViewBag.searchString }))
        </div>
       
    </div>
</div>


