    @if (@ViewBag.bidRegister != null)
    {
        <script src="~/js/numbertomoney.js"></script>
    }

    <script type="text/javascript">
        lightGallery(document.getElementById("lightgallery"), {
            speed: 300,
        });
    </script>
    <!-- end js danh mục  -->
    <script>
        $(".slide-for").slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            centerMode: true,
