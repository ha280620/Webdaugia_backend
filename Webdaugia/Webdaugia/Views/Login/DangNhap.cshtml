@model Webdaugia.Models.User
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="page-links">
    <a href="~/dang-nhap" class="active">Đăng nhập</a><a href="~/dang-ki" >Đăng ký</a>
</div>
<form id="member-login" action="/Login/DangNhap" method="post" class="form-validate form-horizontal well" enctype="multipart/form-data">
    <input class="form-control"
           type="text"
           name="username"
           placeholder="Tên đăng nhập"
           required 
           @ViewData["error-1"]
           />

    <input class="form-control"
           type="password"
           name="password"
           placeholder="Mât khẩu"
           required 
           @ViewData["error-2"]
           />
    <div class="form-button">
        <button id="submit" type="submit" class="ibtn">
            Đăng nhập
        </button>
        <a href="~/Quenmatkhau">Quên mật khẩu?</a>
    </div>
</form>
