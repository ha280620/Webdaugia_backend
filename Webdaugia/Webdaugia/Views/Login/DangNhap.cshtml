@model Webdaugia.Models.Login.LoginModel
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="page-links">
    <a href="~/dang-nhap" class="active">Đăng nhập</a><a href="~/dang-ki">Đăng ký</a>
</div>
<div class="text-danger" style="height:24px">
    @Html.ValidationSummary()
</div>
@using (Html.BeginForm("DangNhap", "Login", FormMethod.Post))
{
    <div class="form_control">
        @*@Html.TextBoxFor(model => model.Username)*@
        <input required name="Username" type="text" placeholder="Tên đăng nhập" />
    </div>
    <div class="form_control">
        @*@Html.TextBoxFor(model => model.Password)*@
        <input required name="Password" type="password" placeholder="Mật khẩu" />
        @*<div class="input-group-append cursor-pointer">
                <span class="input-group-text">
                        <i class="fa fa-eye"></i>
                    </span>
            </div>*@
    </div>
    <div class="row mt-10">
        <div class="col-6">
            <button type="submit" class="btn btn-primary btn-block">Đăng Nhập</button>
        </div>
        <div class="col-6 d-flex align-items-center justify-content-end">
            <a href="~/Login/Quenmatkhau">Quên mật khẩu?</a>
        </div>
    </div>

}
