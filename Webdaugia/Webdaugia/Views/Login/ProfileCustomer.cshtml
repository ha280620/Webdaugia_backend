@model Webdaugia.Models.User
@{
    ViewBag.Title = "ProfileCustomer";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="header-position"></div>
<section id="userInfo" style="background-color:#eee">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3" style="margin-bottom:2rem">
                <div class="userInfo_cata">
                    <ul class="m-0">
                        <li class="active "><a class="p-2" href="/thong-tin-tai-khoan">Thông tin tài khoản</a></li>
                        <li class=""><a class="p-2" href="/thay-doi-mat-khau">Đổi mật khẩu</a></li>
         
                    </ul>
                </div>
            </div>
            <div class="col-12 col-md-9">
                <div class="userInfo_content">
                    <h2 class="text-left pl-0 pt-0 mb-2">Thông tin</h2>
                    @using (Html.BeginForm("ProfileCustomer", "Login", FormMethod.Post, new { are = "" }))
                    {
                        <div class="row">
                            <div class="col-12 col-md-2 mb-2 p-5 p-md-1">
                                <div class="userInfo_img ">
                                    <img class="img-fluid" src="@ViewBag.imguser" alt="" />
                                </div>
                            </div>
                            <div class="col-11 col-md-9">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    @if (ViewBag.Fail != null)
                                    {
                                        <div class="col-12 mb-2">
                                            <div class="text-success">@ViewBag.Fail</div>
                                        </div>}
                                    @if (ViewBag.Success != null)
                                    {
                                        <div class="col-12 mb-2">
                                            <div class="text-success">@ViewBag.Success</div>
                                        </div>
                                     }
                                    <div class="col-12">
                                        <div class="form_control">
                                            <input value="@Model.FullName"
                                                   id="userFullName"
                                                   required
                                                   name="FullName"
                                                   type="text"
                                                   disabled />
                                            <label for="userFullName">Họ và tên</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form_control">
                                            <select id="Gender" name="Gender" disabled>
                                                @if (Model.Gender == true)
                                                {
                                                    <option value="True" selected>Nam</option>
                                                    <option value="False">Nữ</option>
                                                }
                                                else
                                                {
                                                    <option value="True">Nam</option>
                                                    <option value="False" selected>Nữ</option>
                                                }
                                            </select>
                                            <label for="Gender">Giới Tính</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form_control">
                                            <input value="@Model.Birthday.Value.ToString("yyyy-MM-dd")"
                                                   id="userBirthday"
                                                   required
                                                   name="Birthday"
                                                   type="date"
                                                   disabled />
                                            <label for="userBirthday">Ngày sinh</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form_control">
                                            <input value="@Model.Phone"
                                                   id="userPhone"
                                                   required
                                                   name="Phone"
                                                   type="text"
                                                   disabled />
                                            <label for="userPhone">Số điện thoại <span class="text-danger">(được đổi)</span></label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form_control">
                                            <input value="@Model.Email"
                                                   id="userEmail"
                                                   required
                                                   name="Email"
                                                   type="text"
                                                   disabled />

                                            <label for="userEmail">Email <span class="text-danger">(được đổi)</span></label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form_control">
                                            <input value="@Model.Address"
                                                   id="userAddress"
                                                   required
                                                   name="Address"
                                                   type="text"
                                                   disabled />
                                            <label for="userAddress">Địa chỉ</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12" id="user_save">
                                    <div class="row">
                                        <div class="col-6 pl-0">
                                            <button type="submit"
                                                    class="btn btn-primary w-100 font-weight-bold">
                                                Lưu lại
                                            </button>
                                        </div>
                                        <div class="col-6 pr-0">
                                            <button id=""
                                                    type="button"
                                                    onclick="handleOffChange()"
                                                    class="
                                                          btn btn-outline-primary
                                                          w-100
                                                          font-weight-bold
                                                        ">
                                                Huỷ
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="btn btn_changes" onclick="handleOnChange()">
                                    <i class="bx bx-pencil"></i>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Content/Client/js/userinfo.js"></script>