@model PagedList.IPagedList<Webdaugia.Models.Lot>
@using PagedList.Mvc
@{
    ViewBag.Title = "ListLot";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{ var user = (Webdaugia.Models.Common.UserLogin)Session["AD"];}

<div class="row">
    <div class="col-12">
        <!-- ORDERS TABLE -->
        <div class="box">
            <div class="box-header title row">
                <h2 class="col-6 col-sm-12">Danh sách phiên đấu giá</h2>

                <div class="col-6 col-sm-12" style="
    display: flex;
    justify-content: end;
">
                    <a href="/admin/adlot/createlot" class="btn btn-success" style="display:inline-block">
                        <i class="fa fa-plus-circle"></i>
                        Thêm phiên đấu giá mới
                    </a>
                    @*<a href="#" class="btn btn-danger" style="display:inline-block">
                            <i class="fa fa-trash"></i>
                            Xóa SP đã chọn
                        </a>*@
                </div>
            </div>
            <div class="row">
                <div class="col-4 col-sm-12" style="margin-bottom:0">
                    @using (Html.BeginForm("ListLotRegister", "AdLot", FormMethod.Get, new { @class = "navbar-search" }))
                    {
                        <input type="text"
                               name="searchString"
                               class="navbar-search-input"
                               placeholder="Tìm kiếm sản phẩm..."
                               value="@ViewBag.searchString" />
                        <button type="submit"><i class="fas fa-search"></i></button>}
                </div>
            </div>
            <div style="overflow:scroll">
                <table>
                    <thead>
                        <tr>
                            <th width="40px">
                                STT
                            </th>
                            <th width="80px" align="center"></th>
                            <th width="300px" align="center">Tên phiên</th>
                            <th width="70px" align="center">Danh mục</th>
                            <th align="center">Chủ tài sản</th>
                            <th align="center">Giá khởi điểm</th>
                            <th align="center">Bước giá</th>
                            <th align="center">Tiền cọc</th>
                            <th align="center">Ngày bắt đầu phiên</th>
                            <th align="center">Ngày kết thúc phiên</th>
                            <th align="center">Ngày bắt đầu đăng ký</th>
                            <th align="center">Ngày kết thúc đăng ký</th>
                            <th align="center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int count = 1;}
                        @{ var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN"); }
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="13" style="
                            text-align: center;
                            font-size: 2rem;">
                                    Hiện chưa có phiên đấu giá nào
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                @{ count++;}
                                <td><img src="@item.LotImage" width="50px" /></td>
                                <td width="250px">@item.Name</td>
                                <td align="center">@item.Category.Name</td>
                                <td align="center">@item.HostName</td>
                                <td align="center"> @string.Format(info, "{0:0,0}", item.StartingPrice) đ</td>
                                <td align="center"> @string.Format(info, "{0:0,0}", item.MiniumBid) đ</td>
                                <td align="center"> @string.Format(info, "{0:0,0}", item.AdvanceDesposit) đ</td>
                                <td align="center">@item.TimeForBidStart</td>
                                <td align="center">@item.TimeForBidEnd</td>
                                <td align="center">@item.TimeForRegisterStart</td>
                                <td align="center">@item.TimeForRegisterEnd</td>
                                <td align="center">
                                    <div style="height:100%; display:flex; align-items:center; justify-content:center">
                                        <a href="/admin/adlot/editlot/@item.ID" >
                                            <i class="fas fa-pencil-alt" style="color:dodgerblue"></i>
                                        </a>

                                        @if (item.Status == false && user.Role == 1)
                                        {

                                            <a href="/admin/adlot/LockOrUnlockLot/@item.ID" style="margin-left:10px" onclick="return confirm('Bạn có muốn khách hàng có thể xem phiên đấu giá này?\nTên phiên đấu giá: @item.Name')">
                                                <i class="fas fa-eye" style="color:red"></i>

                                            </a>

                                        }
                                        else
                                        {
                                            if (user.Role == 1)
                                            {
                                                <a href="/admin/adlot/LockOrUnlockLot/@item.ID" style="margin-left: 10px" onclick="return confirm('Bạn có muốn khách hàng không thể xem phiên đấu giá này?\nTên phiên đấu giá: @item.Name')">
                                                    <i class="fas fa-eye-slash" style="color:#04D182"></i>
                                                </a>
                                            }
                                        }
                                        @if (item.TimeForRegisterEnd > DateTime.Now)
                                        {

                                            <a href="/admin/adlot/SendMailLotNew?LotID=@item.ID&Url=@Request.Url.ToString()" style="margin-left:10px" onclick="return confirm('Bạn chắc chắn gửi mail thông báo cho tất cả khách hàng biết phiên đấu giá này?\nTên phiên đấu giá: @item.Name')">
                                                <i class='bx bx-mail-send' style="color: #0c4da1; font-size:1.5rem"></i>

                                            </a>

                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @Html.PagedListPager(Model, page => Url.Action("ListLot", new { page, @searchString = ViewBag.searchString }))
        </div>
    </div>
</div>
