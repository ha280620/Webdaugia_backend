
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{ var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN"); }
<!-- nav left -->
<div class="row">
    <div class="col-3 col-md-6 col-sm-12">
        <div class="box box-hover">
            <!-- COUNTER -->
            <div class="counter">
                <div class="counter-title">Tổng phiên đấu giá</div>
                <div class="counter-info">
                    <div class="counter-count">@ViewBag.countLot</div>
                    <i class="bx bx-shopping-bag"></i>
                </div>
            </div>
            <!-- END COUNTER -->
        </div>
    </div>
    <div class="col-3 col-md-6 col-sm-12">
        <div class="box box-hover">
            <!-- COUNTER -->
            <div class="counter">
                <div class="counter-title">Tổng số sản phẩm</div>
                <div class="counter-info">
                    <div class="counter-count">@ViewBag.countProduct</div>
                    <i class="bx bx-chat"></i>
                </div>
            </div>
            <!-- END COUNTER -->
        </div>
    </div>
    <div class="col-3 col-md-6 col-sm-12">
        <div class="box box-hover">
            <!-- COUNTER -->
            @*@{
                    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                }*@
            <div class="counter">
                <div class="counter-title">Tổng doanh thu (VNĐ)</div>
                <div class="counter-info">
                    @if (@ViewBag.countTotal != 0)
                    {
                        <div class="counter-count">@string.Format(info, "{0:0,0}", @ViewBag.countTotal)</div>
                    }
                    else
                    {
                        <div class="counter-count"> @ViewBag.countTotal</div>
                    }


                    <i class="bx bx-line-chart"></i>
                </div>
            </div>
            <!-- END COUNTER -->
        </div>
    </div>
    <div class="col-3 col-md-6 col-sm-12">
        <div class="box box-hover">
            <!-- COUNTER -->
            <div class="counter">
                <div class="counter-title">Tổng tài khoản</div>
                <div class="counter-info">
                    <div class="counter-count">@ViewBag.countAccount</div>
                    <i class="bx bx-user"></i>
                </div>
            </div>
            <!-- END COUNTER -->
        </div>
    </div>
</div>

