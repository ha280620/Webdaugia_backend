@model Webdaugia.Models.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sửa Loại Phiên Đấu</h2>
<div class="box">
    @using (Html.BeginForm("EditCategory", "AdProduct", FormMethod.Post, new { @area = "Admin", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-6 col-sm-12">
            <a href="/admin/adproduct/ListCategory" class="btn btn-info" style="display:inline-block">
                Danh Sách Sản phẩm
            </a>
        </div>


        <div class="col-6  col-sm-12">
            <div class="text-success" style="font-size:large">@ViewBag.success</div>
        </div>
        <div class="col-6  col-sm-12">
            <label>Tên Sản phẩm</label>
            <div class="form_control">
                <input required
                       name="Name"
                       type="text"
                       value="@Model.Name" />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-6 col-sm-12">
            <label>Hình ảnh </label>
            <div class="form_control">
                <img src="@Model.CateImg"  style="width:50%; height:auto"/>
                <input type="file" name="file1" multiple accept=".png,.jpg,.jpeg,.gif" />
            </div>
        </div>
        <div class="col-6 col-sm-12">
            <label>Icon </label>
            <div class="form_control">
                <img src="@Model.CateIcon" style="width:50%; height:auto"/>
                <input type="file" name="file2" multiple accept=".png,.jpg,.jpeg,.gif" />
            </div>
        </div>


        <div class="col-6 col-sm-12">
            <button class="btn btn-success" type="submit">Thêm mới Sản phẩm</button>
        </div>
    }
</div>




