@model List<Webdaugia.Models.User>
@{
    ViewBag.Title = "ConfirmAccount";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <!-- Post TABLE -->
        <div class="box">
            <div class="box-header"><h3>Xác minh tài khoản khách hàng</h3></div>
            <div class="box-body overflow-scroll">
                <table>
                    <thead>
                        <tr>
                            <th width="50px">STT</th>
                            <th  align="center">Họ Tên</th>
                            <th  align="center" width="100px">Ảnh CMND mặt trước</th>
                            <th  align="center" width="100px">Ảnh CMND mặt sau</th>
           
                            <th align="center">Trạng Thái</th>
                            <th  align="center">Xác Minh Tài Khoản</th>
                            <th  align="center">Xem chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int count = 1;}
                        @foreach (var item in Model)
                        {
                            if (item.RoleID == 3)
                            {
                                <tr>
                                    <td  align="center">@count</td>
                                    @{count++;}

                                    <td  width="100px">
                                        @item.FullName
                                    </td>

                                    <td>
                                        <img src="@item.ImageFront" width="300" />
                                        @*<img src="~/imgcmnd/@item.ImageFront" width="100" />*@

                                    </td>
                                    <td>
                                        <img src="@item.ImageBack" width="300" />
                                        @*<img src="~/imgcmnd/@item.ImageBack" width="100" />*@
                                    </td>


                                    @if (item.Status == 1)
                                    {
                                        <td  align="center">
                                            <div class="payment-status payment-paid">
                                                <div class="dot"></div>
                                                <span>Đã xác minh tài khoản</span>
                                            </div>
                                        </td>
                                    }
                                    else if (item.Status == 0)
                                    {
                                        <td  align="center">
                                            <div class="payment-status payment-pending">
                                                <div class="dot"></div>
                                                <span>Chưa xác minh tài khoản</span>
                                            </div>
                                        </td>
                                    }
                                    @if (item.Status == 0)
                                    {
                                        <td  align="center">
                                            @*<a href="/admin/account/ConfirmLockOrUnlockAccount/@item.ID" style="padding-left:50px" onclick="return confirm('Bạn có muốn xác minh tài khoản?\nHọ tên: @item.FullName\nGmail: @item.Email')">
                                                <i class="fas fa-lock" style="color:red"></i>
                                            </a>*@
                                            <a href="/admin/account/ConfirmIdetify/@item.ID" style="padding-left:50px" onclick="return confirm('Bạn có muốn xóa thông tin tài khoản?\nHọ tên: @item.FullName\nGmail: @item.Email')">
                                                @*<i class="fas fa-unlock" style="color:#04D182"></i>*@
                                                <i class="fa fa-times" style="color:red"></i>
                                            </a>

                                        </td>

                                    }
                                    @*else if (item.Status == 1)
                                        {
                                            <td>
                                                <a href="/admin/account/ConfirmLockOrUnlockAccount/@item.ID" style="padding-left:50px" onclick="return confirm('Bạn có muốn hủy xác minh tài khoản?\nHọ tên: @item.FullName\nGmail: @item.Email')">
                                                    <i class="fas fa-unlock" style="color:#04D182"></i>
                                                </a>
                                            </td>
                                        }*@

                                    <td  align="center">
                                        <a class="btn btn-warning btn-sm" href="@Url.Action("Details","Account",new { id = item.ID })"><i class="fas fa-eye"></i></a>
                                        @*<a href="/admin/account/Details" style="padding-left:15px">
                                                <i class="fas fa-pencil-alt" style="color:dodgerblue"></i>
                                            </a>*@
                                    </td>

                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END TABLE -->
    </div>
</div>
